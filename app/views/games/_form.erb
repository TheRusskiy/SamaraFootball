
<%= form_for(@game) do |f| %>

<div class="field">
  <%= f.label (t 'game_date') %><br />
  <%= f.date_select "date", :discard_year=> true, :value => @game.date %>
</div>
<div class="field">
<%= f.label (t 'game_time') %><br />
<%= f.time_select :time, :value => @game.time%>
</div>
<div class="field">
  <%= f.label (t 'game_place') %><br />
  <%= f.text_field :place, :placeholder => (t 'game_place_placeholder') ,:value => @game.place%>
</div>
<div class="field">
<%= f.label (t 'game_price') %><br />
<%= f.number_field :price, :min => 0, :max => 10000, :value => 0, :step =>50, :value => @game.price||0%>
</div>
<div class="actions">
  <%= f.submit (t 'game_submit'), :confirm => (t 'confirmation'), :action=>games_path, :method =>"post", :class => 'btn btn-success'%>
</div>
<% end %>
