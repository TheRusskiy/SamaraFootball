<div id="login_form">
  <form accept-charset="UTF-8" action="<%=login_info_path%>" method="post">
    <label for="login_input"><%= t 'login_username' %>:</label>
    <input id="login_input" type="text" name="username"/>
    </br>
    <label for="password_input"><%= t 'login_password' %>:</label>
    <input id="password_input" type="text" name="password"/>
    <button type="submit" class="btn btn-primary">Log in</button>
  </form>

</div>