<body xmlns="http://www.w3.org/1999/html">
    <div id="login_form">
      <form accept-charset="UTF-8" action="<%=login_info_path%>" method="post">
        <label for="login_input">Username:</label>
        <input id="login_input" type="text" name="username"/>
        </br>
        <label for="password_input">Password:</label>
        <input id="password_input" type="text" name="password"/>
        <button type="submit">Log in</button>
      </form>

    </div>
</body>